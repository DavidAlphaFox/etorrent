#!/bin/sh

# Most of this file was taken from the ejabberd project and then changed
#  until it matched what we had as a goal

NODE=etorrent
HOST=localhost

BEAMDIR=%%%BEAMDIR%%%
CONFIGFILE=%%%CONFIGFILE%%%
ERL_FLAGS=%%%ERL_FLAGS%%%

start () {
    # TODO: Add noshell and friends
    erl ${ERL_FLAGS} -sname ${NODE}@${HOST} -pa ${BEAMDIR} \
	-config ${CONFIGFILE}
	-s etorrent
}

debug () {
    erl -sname debug${NODE}@${HOST} \
	-pa ${BEAMDIR} \
	-remsh ${NODE}@${HOST}
}

ctl () {
    erl -noinput -sname etorrentctl@${HOST} \
	-pa ${BEAMDIR} \
	-s etorrent_ctl -run start ${NODE}@${HOST} $@
}

usage () {
    echo "Usage: $0 {start|stop|debug}"
}

[ $# -lt 1 ] && usage

case $1 in
    start) start;;
    debug) debug;;
    *) ctl $@;;
esac
